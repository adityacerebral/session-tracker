{
  "endpoints": [
    {
      "path": "/api/auth/validate-token",
      "method": "POST",
      "description": "Validate the provided JWT token and return user information",
      "requires_auth": true,
      "payload_example": {
        "app": "your_app_name"
      }
    },
    {
      "path": "/api/auth/token-info",
      "method": "POST",
      "description": "Get detailed information from the JWT token",
      "requires_auth": true,
      "payload_example": {
        "app": "your_app_name"
      }
    },
    {
      "path": "/api/auth/health",
      "method": "POST",
      "description": "Public health check endpoint for authentication service (no authentication required)",
      "requires_auth": false,
      "payload_example": {
        "app": "your_app_name"
      }
    },
    {
      "path": "/api/sessions/start",
      "method": "POST",
      "description": "Start a new session",
      "requires_auth": true,
      "payload_example": {
        "user": "username",
        "time": "2024-01-01T12:00:00.000Z",
        "status": "active",
        "app": "your_app_name"
      }
    },
    {
      "path": "/api/sessions/pause",
      "method": "POST",
      "description": "Pause an active session",
      "requires_auth": true,
      "payload_example": {
        "user": "username",
        "session_id": "uuid-string",
        "time": "2024-01-01T12:30:00.000Z",
        "app": "your_app_name"
      }
    },
    {
      "path": "/api/sessions/resume",
      "method": "POST",
      "description": "Resume a paused session",
      "requires_auth": true,
      "payload_example": {
        "user": "username",
        "session_id": "uuid-string",
        "time": "2024-01-01T12:45:00.000Z",
        "app": "your_app_name"
      }
    },
    {
      "path": "/api/sessions/end",
      "method": "POST",
      "description": "End an active or paused session",
      "requires_auth": true,
      "payload_example": {
        "user": "username",
        "session_id": "uuid-string",
        "time": "2024-01-01T13:00:00.000Z",
        "app": "your_app_name"
      }
    },
    {
      "path": "/api/sessions/heatmap",
      "method": "POST",
      "description": "Get session heatmap data",
      "requires_auth": true,
      "payload_example": {
        "app": "your_app_name",
        "user": "username"
      }
    },
    {
      "path": "/api/sessions/most-active",
      "method": "POST",
      "description": "Get most active days and hours",
      "requires_auth": true,
      "payload_example": {
        "app": "your_app_name",
        "user": "username"
      }
    },
    {
      "path": "/api/sessions/stats",
      "method": "POST",
      "description": "Get session statistics",
      "requires_auth": true,
      "payload_example": {
        "app": "your_app_name",
        "user": "username"
      }
    },
    {
      "path": "/api/sessions/summary",
      "method": "POST",
      "description": "Get summary of all sessions including total count, time and averages",
      "requires_auth": true,
      "payload_example": {
        "app": "your_app_name",
        "user": "username"
      }
    },
    {
      "path": "/api/sessions/public-summary",
